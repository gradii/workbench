{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es2019.array", "ES2015.Reflect"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@account-state/*": ["libs/@account-state/*"],
      "@auth/*": ["libs/@auth/*"],
      "@builder/*": ["libs/@builder/*"],
      "@common": ["libs/@common/index.ts"],
      "@common/*": ["libs/@common/*"],
      "@core/*": ["libs/@core/*"],
      "@database-builder/*": ["libs/@database-builder/*"],
      "@devops-tools/add-ons": ["libs/add-ons/index.ts"],
      "@devops-tools/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@devops-tools/api/auth/*": ["apps/api/src/app/auth/*"],
      "@devops-tools/api/common": ["apps/api/src/app/@common/index.ts"],
      "@devops-tools/api/core/*": ["apps/api/src/app/core/*"],
      "@devops-tools/api/database/*": ["apps/api/src/app/database/*"],
      "@devops-tools/api/shared/*": ["apps/api/src/app/shared/*"],
      "@devops-tools/command": ["libs/command/src/index.ts"],
      "@devops-tools/command-server": ["libs/command-server/src/index.ts"],
      "@devops-tools/cron": ["libs/cron/src/index.ts"],
      "@devops-tools/cron/cron-core": ["libs/cron/src/lib/cron-core/index.ts"],
      "@devops-tools/cron/ng-cron": ["libs/cron/src/lib/cron-core/index.ts"],
      "@devops-tools/data-table": ["libs/data-table/src/index.ts"],
      "@devops-tools/devops/common": ["apps/devops/src/app/common/index.ts"],
      "@devops-tools/devops/environments/*": ["apps/devops/src/environments/*"],
      "@devops-tools/devops/workbench": [
        "apps/devops/src/app/workbench/index.ts"
      ],
      "@devops-tools/devops/workbench/*": ["apps/devops/src/app/workbench/*"],
      "@devops-tools/fedaco/orm": ["libs/fedaco/orm/src/index.ts"],
      "@devops-tools/generate": ["libs/generate/src/index.ts"],
      "@devops-tools/iterator": ["libs/iterator/src/index.ts"],
      "@devops-tools/kitchen-shell": ["libs/kitchen-shell/src/index.ts"],
      "@devops-tools/ngx-diagrams": ["libs/ngx-diagrams/src/index.ts"],
      "@devops-tools/push-notifications": [
        "libs/push-notifications/src/index.ts"
      ],
      "@devops-tools/reiki-ast": ["libs/reiki-ast/src/index.ts"],
      "@devops-tools/reiki-ts-adapter": ["libs/reiki-ts-adapter/src/index.ts"],
      "@devops-tools/test-codegen": ["libs/test-codegen/src/index.ts"],
      "@devops-tools/ui": ["libs/ui/src/index.ts"],
      "@devops-tools/utils": ["libs/utils/src/index.ts"],
      "@devops-tools/workflow": ["libs/workflow/src/index.ts"],
      "@environments": ["libs/@environments/environment.ts"],
      "@kitchen": ["libs/kitchen/src/index.ts"],
      "@root-state/*": ["libs/@root-state/*"],
      "@shared/*": ["libs/@shared/*"],
      "@tools-shared/*": ["libs/@tools-shared/*"],
      "@tools-state/*": ["libs/@tools-state/*"],
      "@workbench-core/*": ["libs/@workbench-core/*"],
      "@workbench-interfaces": ["libs/@workbench-interfaces/index.ts"],
      "@workflow-backend/*": ["libs/@workflow-backend/*"],
      "@workflow-common/*": ["libs/@workflow-common/*"],
      "@workflow-frontend/*": ["libs/@workflow-frontend/*"],
      "package-tools": ["tools/package-tools/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "storage"]
}
