    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "name": "serve:api",
            "envFile": "${workspaceFolder}/.env",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "serve:api"
            ],
            "port": 3001
        },
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "name": "serve:devops",
            "envFile": "${workspaceFolder}/.env",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "serve:devops"
            ],
            "port": 8200
        },
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "name": "workbench:serve",
            "envFile": "${workspaceFolder}/.env",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "workbench:serve"
            ]
        },
    ]
}